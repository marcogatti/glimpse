@using Glimpse.DataAccessLayer.Entities

@section css {
    @Styles.Render("~/Home/css")}
<link href="~/Content/ui-lightness/jquery-ui-1.10.3.custom.css" rel="stylesheet" />
@section scripts {
    @Scripts.Render("~/bundles/jquerymousewheel"),
    @Scripts.Render("~/bundles/glimpse")
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.3.custom.js"></script>
}

@{
    ViewBag.Title = "Index";        
}


<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container-fluid">
            <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="brand" href="#">Glimpse</a>
            <div class="nav-collapse collapse">
                <p class="navbar-text pull-right">
                    Logged in as <a href="#" class="navbar-link">@ViewBag.Email</a>
                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "navbar-link" })
                </p>
                <ul class="nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li><a href="#about">About</a></li>
                    <li><a href="#contact">Contact</a></li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
</div>

<div id="example" class="modal hide fade in" style="display: none;">
    <div class="modal-header">
        <a class="close" data-dismiss="modal">×</a>
    </div>
    <div class="modal-body">
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-success">Call to action</a>
        <a href="#" class="btn" data-dismiss="modal">Close</a>
    </div>
</div>

<div class="container-fluid">

    <div class="row-fluid">
        <div class="span2">
            <div class="well sidebar-nav">
                <a href="#compose" id="compose">Redactar</a>
                <ol id="labels" class="nav nav-list">

                    <li class="nav-header">Labels</li>

                    @*                    <li class="nav-header">Sidebar</li>
                    <li><a href="#">Link</a></li>*@

                </ol>

            </div>
            <!--/.well -->

            <div class="progress progress-striped active">
                <div class="bar" style="width: 100%;"></div>
            </div>

        </div>
        <!--/span-->

        <div id="email-container" class="span10">

            <a href="#">
                <i id="zoom-in" class="icon-zoom-in"></i>
                <i id="zoom-out" class="icon-zoom-out"></i>
            </a>

            <canvas id="gridCanvas"></canvas>

            <div id="dateToday" class="coord dateCoord">Today</div>
            <div id="dateTime" class="coord dateCoord hidable hidden"></div>
            <div id="from" class="coord hidable hidden"></div>


        </div>

    </div>
    <!--/row-->

    <hr />

    <footer>
        <p>&copy; glimpse 2013</p>
    </footer>

</div>

<!--Mails Editor-->
<div id="compose_pannel">
    <div class="ui-dialog-content">
        <table style="width: 100%;">
            <tbody>
                <tr><td><textarea rows="1" placeholder="Destinatarios..." style="width: 100%; resize: vertical; height: 22px; min-height: 22px;"></textarea></td></tr>
                <tr><td><textarea rows="1" placeholder="Asunto..." style="width: 100%; resize: vertical; height: 22px; min-height: 22px;"></textarea></td></tr>
                <tr><td><textarea cols="80" id="text_editor" rows="10"></textarea></td></tr>
            </tbody>
        </table>
    </div>
    <div class="ui-dialog-buttonpane"></div>
</div>
<!--/.fluid-container-->
