@using System.Web.Mvc.Html5
@{Html.EnableClientValidation(true); }
@model glimpse.Models.User

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <form class="form-signin">
        @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl, @class = "form-signin" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="form-signin-heading">Please sign in</h2>

            @Html.TextBoxFor(m => m.Email, new { type = "email", placeholder = "address@example.com", @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.Email)
            @Html.PasswordFor(m => m.Password, new {  type = "password", placeholder = "password", @class = "input-block-level" })
            @Html.ValidationMessageFor(m => m.Password)
            <br />
            <input class="btn btn-large btn-primary" type="submit" value="Entrar" />
    
        }
    </form>
</div>
   
    

