<div id="config-view" class="modal hide fade in" style="display: none;" data-backdrop="static">
    <div class="modal-header">
        <a href="#" class="close" data-dismiss="modal">×</a>
        <h4>Configura tu cuenta Glimpse</h4>
    </div>

    <div class="modal-body">
        <ul class="nav nav-tabs">
            <li id="config-personaldata" data-body-id="config-personaldata-cont" class="active">
                <a href="#personal-data">Datos Personales</a>
            </li>
            <li id="config-mailaccount" data-body-id="config-mailaccount-cont">
                <a href="#mail-accounts">Cuentas de Email</a>
            </li>
            <li id="config-password" data-body-id="config-password-cont">
                <a href="#password">Contraseña</a>
            </li>
        </ul>

        <div id="config-errors-cont" class="validation-summary-errors hidden">
            <ul id="config-errors-list"></ul>
            <hr />
        </div>

        <div id="config-password-cont" class="nav-body hidden">
            <form class="form-horizontal" id="config-password-form" data-action="changePassword">
                <div class="control-group">
                    <label class="control-label" for="config-inp-oldpass">Contraseña Actual</label>
                    <div class="controls">
                        <input type="password" id="config-inp-oldpass" data-name="oldPassword">
                    </div>
                </div>
                <br />
                <div class="control-group">
                    <label class="control-label" for="config-inp-newpass1">Contraseña nueva</label>
                    <div class="controls">
                        <input type="password" id="config-inp-newpass1" data-name="newPassword">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-newpass2">Confirma Contraseña nueva</label>
                    <div class="controls">
                        <input type="password" id="config-inp-newpass2" data-name="newPasswordConfirmation">
                    </div>
                </div>
                <button id="config-password-submit" type="submit" class="btn btn-primary" style="margin-left: 25%">Guardar</button>
            </form>
        </div>

        <div id="config-mailaccount-cont" class="hidden nav-body">
            <form class="form-horizontal" id="config-mailaccount-form" data-action="manageMailAccounts">
                <div class="control-group">
                    <label class="control-label" for="config-inp-account1">Cuenta de Email #1</label>
                    <div class="controls">
                        <input type="email" id="config-inp-account1">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-account2">Cuenta de Email #2</label>
                    <div class="controls">
                        <input type="email" id="config-inp-account2">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-account3">Cuenta de Email #3</label>
                    <div class="controls">
                        <input type="email" id="config-inp-account3">
                    </div>
                </div>
                <button id="config-mailaccount-submit" type="submit" class="btn btn-primary" style="margin-left: 25%">Guardar</button>
            </form>
        </div>

        <div id="config-personaldata-cont" class="nav-body">
            <form class="form-horizontal" id="config-personaldata-form" data-action="editPersonalData">
                <div class="control-group">
                    <label class="control-label" for="config-inp-name">Nombre</label>
                    <div class="controls">
                        <input type="text" id="config-inp-name">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-surname">Apellido</label>
                    <div class="controls">
                        <input type="text" id="config-inp-surname">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-country">País</label>
                    <div class="controls">
                        <input type="text" id="config-inp-country">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-city">Ciudad</label>
                    <div class="controls">
                        <input type="text" id="config-inp-city">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="config-inp-phone">Teléfono</label>
                    <div class="controls">
                        <input type="tel" id="config-inp-phone">
                    </div>
                </div>
                <button id="config-personaldata-submit" type="submit" class="btn btn-primary" style="margin-left: 25%">Guardar</button>
            </form>
        </div>
    </div>
    <div class="modal-footer">
    </div>
</div>
