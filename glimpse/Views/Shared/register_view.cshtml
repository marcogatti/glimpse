<div id="register-view" class="modal hide fade in" style="display: none;" data-backdrop="static">
        <a class="close" data-dismiss="modal">×</a>

        <h3 style="margin-left:5%; margin-top:3%" id="registration-title">Creá tu usuario Glimpse</h3>

    <div class="modal-body">
        <ul class="nav nav-tabs">
            <li id="register-user" data-body-id="config-password-cont" class="active">
                <a><i class="icon-user"></i> Datos de Usuario</a>
            </li>
            <li id="register-mailaccounts" data-body-id="config-mailaccount-cont">
                <a><i class="icon-envelope"></i> Cuentas de Email</a>
            </li>
        </ul>
        
        <div id="config-errors-cont" class="validation-summary-errors hidden">
            <ul id="config-errors-list"></ul>
            <hr />
        </div>

        <div id="register-user-div" class="nav-body">
            <form class="form-horizontal" id="register-user-form" data-action="changePassword">
                <div class="control-group">
                    <label class="control-label" for="register-name">Nombre</label>
                    <div class="controls">
                        <input type="text" id="register-name" data-name="firstname" required placeholder="Mi nombre">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="register-lastname">Apellido</label>
                    <div class="controls">
                        <input type="text" id="register-lastname" data-name="lastname" required placeholder="Mi apellido">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="register-username">Nombre de Usuario</label>
                    <div class="controls">
                        <input type="text" id="register-username" data-name="username" required placeholder="Mi nuevo nombre de usuario">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="register-pass">Contraseña</label>
                    <div class="controls">
                        <input type="password" id="register-pass" data-name="userpassword" required placeholder="Mi contraseña">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="register-confpass">Confirmación de Contraseña</label>
                    <div class="controls">
                        <input type="password" id="register-confpass" data-name="userconfirmationpassword" required placeholder="Mi contraseña otra vez">
                    </div>
                </div>
                <button id="registration-next-btn" type="submit" class="btn btn-primary" style="margin-left: 42%">Siguiente</button>
            </form>
        </div>

        <div id="register-mails-div" class="hidden nav-body">
            <form class="form-horizontal" id="register-mails-form" data-action="manageMailAccounts">
                <div style="max-height: 320px; overflow-y: auto;">
                    <div class="control-group">
                        <label class="control-label" for="config-inp-account1">Cuenta de Email #1</label>
                        <div class="controls">
                            <input type="email" id="config-inp-account1" data-name="mailAccount1" placeholder="Ejemplo: micuenta@gmail.com">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-password1">Contraseña #1</label>
                        <div class="controls">
                            <input type="password" id="config-inp-password1" data-name="password1" placeholder="Mi contraseña de la cuenta">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-main1">¿Cuenta principal?</label>
                        <div class="controls">
                            <input type="checkbox" id="config-inp-main1" data-name="isMainAccount1">
                        </div>
                    </div>
                    <br />

                    <div class="control-group">
                        <label class="control-label" for="config-inp-account2">Cuenta de Email #2</label>
                        <div class="controls">
                            <input type="email" id="config-inp-account2" data-name="mailAccount2">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-password2">Contraseña #2</label>
                        <div class="controls">
                            <input type="password" id="config-inp-password2" data-name="password2">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-main2">¿Cuenta principal?</label>
                        <div class="controls">
                            <input type="checkbox" id="config-inp-main2" data-name="isMainAccount2">
                        </div>
                    </div>
                    <br />

                    <div class="control-group">
                        <label class="control-label" for="config-inp-account3">Cuenta de Email #3</label>
                        <div class="controls">
                            <input type="email" id="config-inp-account3" data-name="mailAccount3">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-password3">Contraseña #3</label>
                        <div class="controls">
                            <input type="password" id="config-inp-password3" data-name="password3">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="config-inp-main3">¿Cuenta principal?</label>
                        <div class="controls">
                            <input type="checkbox" id="config-inp-main3" data-name="isMainAccount3">
                        </div>
                    </div>
                </div>
                <hr />
                <a id="config_mailaccount-goback" class="btn btn-primary" style="margin-left: 25%">Volver</a>
                <button id="config-mailaccount-submit" type="submit" class="btn btn-primary" style="margin-left: 25%">Guardar</button>
            </form>
        </div>
    </div>
</div>
